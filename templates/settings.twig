{% import '_includes/forms' as forms %}

<table class="data fullwidth">
    <thead>
        <th>{{'Option'|t}}</th>
        <th>{{'Value'|t}}</th>
    </thead>

    <tbody>
        <tr>
            <td>{{'URL to your policy page'|t}}</td>
            <td>{{- forms.textField({
                name: 'policyUrl',
                value: settings.policyUrl,
                instructions: 'Link to your data policy page'|t
            }) -}}</td>
        </tr>
        <tr>
            <td>{{'Allow visitors to reject cookies'|t}}</td>
            <td>{{- forms.checkboxField({
                name: 'showRejectButton',
                value: settings.showRejectButton,
                checked: settings.showRejectButton,
                instructions: 'Google Analytics and custom scripts won\'t be loaded after rejcting cookies.'|t
            }) -}}</td>
        </tr>
        <tr>
            <td>{{'Google Analytics (Anonymize IP per default)'|t}}</td>
            <td>{{- forms.textField({
                name: 'googleAnalyticsTrackingId',
                value: settings.googleAnalyticsTrackingId,
                instructions: 'Leave empty if the website doesn\'t use Google Analytics'|t
            }) -}}</td>
        </tr>
        <tr>
            <td>{{'Scripts to load external content, after user accepted cookies'|t}}</td>
            <td>{{- forms.textArea({
                rows: 20,
                name: 'codeSnippets',
                value: settings.codeSnippets,
                instructions: 'Leave empty if the website doesn\'t use external scripts.'|t
            }) -}}</td>
        </tr>
    </tbody>
</table>
